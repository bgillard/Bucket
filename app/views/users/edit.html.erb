<h1>Edit Profile</h1>

<%= form_for(@user)  do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :name %>
		<br />
		<%= f.text_field :name %>
	</div>
	<br />
	<div class="field">
		<%= f.label :email %>
		<br />
		<%= f.text_field :email %>
	</div>
	<br />
	<div class="field">
		<%= f.label :password %>
		<br />
		<%= f.password_field :password %>
	</div>
	<br />
	<div class="field">
		<%= f.label :password_confirmation, "Confirm password" %>
		<br />
		<%= f.password_field :password_confirmation %>
	</div>
	<br />
	<div class="actions">
		<%= f.submit "Update" %>
	</div>
<% end %>
<br /><br />
<div>
  <h1>User Icon</h1>
  <p>This is your user icon. It is hosted at http://www.gravatar.com/.<br />You may change it below!</p>
  <%= gravatar_for @user, :size => 100 %>
  <a href="http://gravatar.com/emails" target="_blank">Change</a>
</div>
