<div id="profile">
	<h1><%= @user.name %></h1>
	<%= gravatar_for @user, :size => 150 %>
	<br />
	<p>Goals: <%= @user.microposts.count %>
	<p>Profile link: <%= link_to user_path(@user), @user %></p>
</div>

<div id="bucket">
	<h2>These are my goals!</h2>
	<% if @user.microposts.any? %>
		<%= render @microposts %>
	<% end %>
</div>