<h1>Browse Users</h1>

<%= will_paginate %>

<div class="users" style="padding-bottom: 25px;">
	<% @users.each do |user| %>
		<div class="client">
			<%= gravatar_for user, :size => 100 %>
			<%= link_to user.name, user %>
			<% if current_user.admin? %>
				| <%= link_to "Delete", user, :method => :delete, :confirm => "Are you sure you want to delete this user?", :title => "Delete #{user.name}" %>
			<%end %>
		</div>
	<% end %>
</div>

<%= will_paginate %>